{
  "name": "quiz-master-server",
  "version": "1.0.0",
  "description": "Professional real-time quiz platform with WebSocket support and clean architecture",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "npm run test:server",
    "test:server": "mocha src/tests/**/*.test.js",
    "serve": "node src/app.js",
    "serve:dev": "nodemon src/app.js --ignore public/",
    "setup": "npm install && mkdir -p data logs uploads/temp",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:restart": "pm2 restart quiz-backend",
    "pm2:stop": "pm2 stop quiz-backend",
    "pm2:logs": "pm2 logs quiz-backend"
  },
  "keywords": [
    "quiz",
    "real-time",
    "websocket",
    "education",
    "interactive",
    "german",
    "live-quiz",
    "scoreboard"
  ],
  "author": "QuizMaster Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "rate-limiter-flexible": "^2.4.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "http-server": "^14.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piosteiner/web_quiz.git"
  },
  "bugs": {
    "url": "https://github.com/piosteiner/web_quiz/issues"
  },
  "homepage": "https://quiz.piogino.ch"
}
